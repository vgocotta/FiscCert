@page "/"
@page "/certificados"
@using FiscCert.Web.Models
@inject HttpClient Http
@inject IJSRuntime JS
@inject NavigationManager Nav

<PageTitle>Meus Certificados</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3>Certificados Cadastrados</h3>
    <a href="/upload" class="btn btn-success">+ Novo Certificado</a>
</div>
<hr />

@if (certificates == null)
{
    <div class="d-flex justify-content-center mt-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Carregando...</span>
        </div>
    </div>
}
else
{
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="input-group">
                <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
                <input type="text" class="form-control" placeholder="Buscar por empresa ou CNPJ/CPF..."
                       @bind="SearchTerm" @bind:event="oninput" @onkeyup="HandleKeyUp" />
            </div>
        </div>
        <div class="col-md-4">
            <select class="form-select" value="@OrderBy" @onchange="HandleSortChange">
                <option value="expiration">Vencimento (Mais próximos)</option>
                <option value="expiration_desc">Vencimento (Mais distantes)</option>
                <option value="name">Nome da Empresa (A-Z)</option>
            </select>
        </div>
        <div class="col-md-2">
            <button class="btn btn-primary w-100" @onclick="LoadCertificates">Filtrar</button>
        </div>
    </div>

    @if (!certificates.Any())
    {
        <div class="alert alert-warning">Nenhum certificado encontrado para esta busca.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Proprietário</th>
                        <th>CNPJ / CPF</th>
                        <th>Vencimento</th>
                        <th>Status</th>
                        <th>Senha</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cert in certificates)
                    {
                        <tr>
                            <td class="fw-bold">@cert.OwnerName</td>
                            <td>@FormatDocument(cert.FederalInscription)</td>
                            <td>@cert.ExpirationDate.ToString("dd/MM/yyyy")</td>
                            <td>
                                @{
                                    var daysRemaining = (cert.ExpirationDate.Date - DateTime.UtcNow.Date).Days;
                                }
                                @if (cert.IsRevoked)
                                {
                                    <span class="badge bg-danger">Revogado</span>
                                }
                                else if (daysRemaining < 0)
                                {
                                    <span class="badge bg-danger">Vencido</span>
                                }
                                else if (daysRemaining == 0)
                                {
                                    <span class="badge text-white" style="background-color: #fd7e14;">Vence hoje</span>
                                }
                                else if (daysRemaining <= 30)
                                {
                                    <span class="badge bg-warning text-dark">@daysRemaining dias</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Ativo</span>
                                }
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    @if (isLoadingPassword.ContainsKey(cert.Id) && isLoadingPassword[cert.Id])
                                    {
                                        <span class="spinner-border spinner-border-sm text-primary me-2" role="status"></span>
                                    }
                                    else
                                    {
                                        var isVisible = passwordVisibility.ContainsKey(cert.Id) && passwordVisibility[cert.Id];
                                        var pwd = fetchedPasswords.ContainsKey(cert.Id) ? fetchedPasswords[cert.Id] : "";

                                        <span class="font-monospace me-2" style="min-width: 80px; display: inline-block;">
                                            @(isVisible? pwd : "••••••••")
                                        </span>

                                        <button class="btn btn-sm text-primary p-0 border-0 bg-transparent" @onclick="() => TogglePassword(cert.Id)" title="@(isVisible ? "Esconder Senha" : "Mostrar Senha")">
                                            <i class="bi @(isVisible ? "bi-eye-slash-fill" : "bi-eye-fill") fs-5"></i>
                                        </button>
                                    }
                                </div>
                            </td>
                            <td>
                                <button class="btn btn-sm text-dark p-0 border-0 bg-transparent me-3" @onclick="() => DownloadCertificate(cert.Id)" title="Download do .pfx">
                                    <i class="bi bi-download fs-5"></i>
                                </button>

                                <button class="btn btn-sm text-danger p-0 border-0 bg-transparent  me-3" @onclick="() => DeleteCertificate(cert.Id)" title="Excluir Certificado">
                                    <i class="bi bi-trash-fill fs-5"></i>
                                </button>


                                @if (!cert.IsRevoked)
                                {
                                    <button class="btn btn-sm text-warning p-0 border-0 bg-transparent" @onclick="() => RevokeCertificate(cert.Id)" title="Revogar Certificado">
                                        <i class="bi bi-slash-circle-fill fs-5"></i>
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
}


@code {
    private List<CertificateDto>? certificates;

    // Usando o mesmo Guid fake do upload para testar
    private readonly string tenantId = "3fa85f64-5717-4562-b3fc-2c963f66afa6";

    private string SearchTerm { get; set; } = string.Empty;
    private string OrderBy { get; set; } = "expiration";

    private Dictionary<Guid, bool> passwordVisibility = new();
    private Dictionary<Guid, bool> isLoadingPassword = new();
    private Dictionary<Guid, string> fetchedPasswords = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadCertificates();
    }

    private async Task LoadCertificates()
    {
        try
        {
            var url = $"/api/certificates?tenantId={tenantId}&orderBy={OrderBy}";
            if (!string.IsNullOrWhiteSpace(SearchTerm))
            {
                url += $"&searchTerm={Uri.EscapeDataString(SearchTerm)}";
            }

            certificates = await Http.GetFromJsonAsync<List<CertificateDto>>(url);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erro ao buscar certificados: {ex.Message}");
        }
    }

    private async Task HandleSortChange(ChangeEventArgs e)
    {
        OrderBy = e.Value?.ToString() ?? "expiration";
        await LoadCertificates();
    }

    private async Task HandleKeyUp(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await LoadCertificates();
        }
    }

    private string FormatDocument(string document)
    {
        if (string.IsNullOrWhiteSpace(document)) return string.Empty;

        if (document.Length == 11)
            return $"{document.Substring(0, 3)}.{document.Substring(3, 3)}.{document.Substring(6, 3)}-{document.Substring(9, 2)}";

        if (document.Length == 14)
            return $"{document.Substring(0, 2)}.{document.Substring(2, 3)}.{document.Substring(5, 3)}/{document.Substring(8, 4)}-{document.Substring(12, 2)}";

        return document;
    }

    private async Task TogglePassword(Guid id)
    {
        if (passwordVisibility.ContainsKey(id) && passwordVisibility[id])
        {
            passwordVisibility[id] = false;
            return;
        }

        if (!fetchedPasswords.ContainsKey(id))
        {
            isLoadingPassword[id] = true;
            StateHasChanged();

            try
            {
                var response = await Http.GetFromJsonAsync<PasswordResponseDto>($"/api/certificates/{id}/password?tenantId={tenantId}");
                if (response != null)
                {
                    fetchedPasswords[id] = response.Password;
                }
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Erro ao buscar senha: {ex.Message}");
            }
            finally
            {
                isLoadingPassword[id] = false;
            }
        }

        passwordVisibility[id] = true;
    }

    private void DownloadCertificate(Guid id)
    {
        var url = $"{Http.BaseAddress}api/certificates/{id}/download?tenantId={tenantId}";
        Nav.NavigateTo(url, forceLoad: true);
    }

    private async Task RevokeCertificate(Guid id)
    {
        bool confirmed = await JS.InvokeAsync<bool>("confirm", "Deseja realmente revogar este certificado? Ele não poderá ser usado para novas assinaturas.");
        if (!confirmed) return;

        try
        {
            var request = new HttpRequestMessage(new HttpMethod("PATCH"), $"/api/certificates/{id}/revoke?tenantId={tenantId}");
            var response = await Http.SendAsync(request);

            if (response.IsSuccessStatusCode)
            {
                await LoadCertificates();
            }
            else
            {
                await JS.InvokeVoidAsync("alert", "Erro ao revogar o certificado.");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erro ao revogar: {ex.Message}");
        }
    }

    private async Task DeleteCertificate(Guid id)
    {
        bool confirmed = await JS.InvokeAsync<bool>("confirm", "Tem a certeza que deseja excluir este certificado permanentemente? Esta ação não pode ser desfeita.");
        if (!confirmed) return;

        try
        {
            var response = await Http.DeleteAsync($"/api/certificates/{id}?tenantId={tenantId}");
            if (response.IsSuccessStatusCode)
            {
                await LoadCertificates();
            }
            else
            {
                await JS.InvokeVoidAsync("alert", "Erro ao excluir o certificado. Verifique os logs.");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erro ao excluir: {ex.Message}");
        }
    }

}